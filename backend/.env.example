# ==============================================
# Backend Server 설정
# ==============================================

# 서버 포트 (기본값: 3001)
PORT=3001

# 서버 호스트 (기본값: 0.0.0.0 - 모든 인터페이스에서 접근 허용)
# 로컬 전용: 127.0.0.1
# 외부 접근 허용: 0.0.0.0
HOST=0.0.0.0

# Frontend URL (CORS, 리다이렉트에 사용)
FRONTEND_URL=http://localhost:5173

# ==============================================
# Appium 서버 설정
# ==============================================

# Appium 서버 포트 (기본값: 4900)
# Windows 예약 포트 범위(4723-4822)를 피해 4900 사용
APPIUM_PORT=4900
APPIUM_HOST=127.0.0.1

# ==============================================
# Cloudflare R2 Storage 설정 (리포트 공유용)
# ==============================================

# R2 활성화 여부 (true/false)
R2_ENABLED=false
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=

# ==============================================
# Slack 설정
# ==============================================

# Slack OAuth 설정 (선택)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_REDIRECT_URI=

# Slack Webhook URL (알림용)
SLACK_WEBHOOK_URL=

# ==============================================
# 인증 설정
# ==============================================

# JWT Secret (필수 - 랜덤 문자열 사용 권장)
# 생성 명령: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here

# ==============================================
# 로그 설정
# ==============================================

# 로그 레벨 (DEBUG, INFO, WARN, ERROR, ALWAYS)
LOG_LEVEL=INFO

# ==============================================
# OpenCV 설정 (Windows)
# ==============================================

# OpenCV 시스템 설치 경로 (chocolatey: C:\tools\opencv)
# OPENCV4NODEJS_DISABLE_AUTOBUILD=1
# OPENCV_INCLUDE_DIR=C:\tools\opencv\build\include
# OPENCV_LIB_DIR=C:\tools\opencv\build\x64\vc16\lib
# OPENCV_BIN_DIR=C:\tools\opencv\build\x64\vc16\bin
