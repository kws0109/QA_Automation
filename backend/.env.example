# Appium 서버 설정
# Windows 예약 포트 범위(4723-4822)를 피해 4900 사용
APPIUM_PORT=4900
APPIUM_HOST=127.0.0.1

# Cloudflare R2 Storage 설정 (리포트 공유용)
# R2_ENABLED=true로 설정하면 Slack 알림에 공개 리포트 링크가 포함됨
# 버킷 설정: R2 대시보드에서 버킷 생성 후 공개 액세스 활성화 필요
R2_ENABLED=false
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://your-bucket.your-domain.com

# Slack OAuth 설정 (사용자 인증용)
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_REDIRECT_URI=http://localhost:3001/auth/slack/callback
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Slack 알림 설정 (테스트 결과 알림용)
# Webhook URL 또는 Bot Token 중 하나만 설정하면 됨
# Webhook 생성: https://api.slack.com/messaging/webhooks
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
# Bot Token (chat:write 권한 필요): https://api.slack.com/apps
# SLACK_BOT_TOKEN=xoxb-your-bot-token
# SLACK_DEFAULT_CHANNEL_ID=C1234567890

# Slack 알림 옵션 (기본값: true, false로 비활성화)
# SLACK_NOTIFY_ON_SUCCESS=true    # 성공 시 알림
# SLACK_NOTIFY_ON_FAILURE=true    # 실패 시 알림
# SLACK_NOTIFY_ON_PARTIAL=true    # 부분 성공 시 알림
# SLACK_MENTION_ON_FAILURE=true   # 실패 시 @channel 멘션

# Frontend URL (리포트 링크 생성용)
FRONTEND_URL=http://localhost:5173

# 로깅 설정
# LOG_LEVEL: ERROR | WARN | INFO | DEBUG (기본: INFO)
# ERROR: 오류만 출력
# WARN: 경고 + 오류
# INFO: 일반 정보 + 경고 + 오류 (권장)
# DEBUG: 모든 로그 출력 (개발용)
LOG_LEVEL=INFO

# 특정 모듈의 로그 비활성화 (쉼표로 구분)
# 예: LOG_DISABLED_MODULES=ScreenRecorder,SessionManager
LOG_DISABLED_MODULES=
